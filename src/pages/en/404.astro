---
import Layout from '@layouts/Layout.astro'
import { t } from '../../i18n'
---

<Layout title={t('en', 'notFound.title')}>
  <div class="flex flex-col items-center justify-center min-h-[60vh] text-center">
    <h1 class="text-6xl font-bold text-accent mb-4">404</h1>
    <h2 class="text-2xl font-semibold mb-4">{t('en', 'notFound.title')}</h2>
    <p class="text-muted-foreground mb-8 max-w-md">
      {t('en', 'notFound.message')}
    </p>
    <a
      href="/en"
      class="px-6 py-3 bg-accent text-background font-semibold rounded-lg hover:bg-accent/90 transition-colors"
    >
      {t('en', 'notFound.backHome')}
    </a>
  </div>
</Layout>
