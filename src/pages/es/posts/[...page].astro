---
import Layout from '@layouts/Layout.astro'
import { getSortedPosts } from '@utils'
import PostPreviewsWithYear from '@components/PostPreviewsWithYear.astro'
import type { GetStaticPaths, Page } from 'astro'
import type { CollectionEntry } from 'astro:content'
import Pagination from '@components/Pagination.astro'
import siteConfig from '../../../site.config'
import { t } from '../../../i18n'

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  const posts = await getSortedPosts()
  return paginate(posts, { pageSize: siteConfig.pageSize })
}

type Props = {
  page: Page<CollectionEntry<'posts'>>
}

const { page } = Astro.props
const currentLocale = 'es'

const prevUrl = page.url.prev ? `/es${page.url.prev}` : undefined
const nextUrl = page.url.next ? `/es${page.url.next}` : undefined
---

<Layout 
  title={t(currentLocale, 'nav.archive')}
  description={t(currentLocale, 'home.viewAllPosts')}
>
  <PostPreviewsWithYear posts={page.data} />
  <Pagination 
    prevLink={prevUrl} 
    nextLink={nextUrl}
    prevText={t(currentLocale, 'nav.previous')}
    nextText={t(currentLocale, 'nav.next')}
  />
</Layout>
