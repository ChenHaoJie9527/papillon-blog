---
import { Icon } from 'astro-icon/components'
import { t, getCurrentLocale } from "../i18n"

interface Props {
  prevLink?: string
  prevText?: string
  nextLink?: string
  nextText?: string
}

const { prevLink, nextLink } = Astro.props
const currentLocale = getCurrentLocale(Astro.url.pathname);
---

<div class="my-5 flex flex-row flex-wrap gap-3 justify-center">
  {
    prevLink && (
      <a
        href={prevLink}
        aria-label="Previous Page"
        class="button flex-row items-center justify-center !pl-3.5 w-full sm:w-min"
      >
        <Icon name="chevrons-left" class="mr-2 text-xl" />
        {t(currentLocale, "nav.previous")}
      </a>
    )
  }
  {
    nextLink && (
      <a
        href={nextLink}
        aria-label="Next Page"
        class:list={[
          'button flex-row items-center justify-center !pr-3.5 w-full sm:w-min',
          prevLink && 'ml-auto',
        ]}
      >
        {t(currentLocale, "nav.next")}
        <Icon name="chevrons-right" class="ml-2 text-xl" />
      </a>
    )
  }
</div>
